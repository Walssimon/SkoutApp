<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipalActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Menu Principal"
        android:textColor="#111"
        android:textSize="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coffe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PokeCafé" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(413)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ . Pallet Town, Café" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O melhor café Pokemon, para se tornar o melhor treinador pokemon de todo o planeta, você precisa tomar a refeição mais importante do dia no melhor café da região. " />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#51A1A1A1" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horários Disponíveis" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="17:30"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="19:30"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="21:00"
                    android:textSize="12dp" />
            </LinearLayout>

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>